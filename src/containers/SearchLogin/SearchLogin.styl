@import "../../assets/stylus/mixins.styl"
  $rem = 375/10rem
  basic($color)
    display block
    width 100%
    height (45/$rem)
    font-size (14/$rem)
    text-align center
    border-radius (4/$rem)
    margin-bottom (16/$rem)
    line-height (45/$rem)
    color $color
  basicPosition()
    display inline-block
    overflow hidden
    width (20/$rem)
    height (20/$rem)
    vertical-align middle
    margin-right (2/$rem)
  .wrap
    .wrapContainer
      width 100%
      height 1344px
      background-color #F2F5F4
      .Loginlogo
        text-align center
        &>img
          width (134/$rem)
          height (45/$rem)
          padding (80/$rem) 0
      .loginHander
        padding 0 (20/$rem)
        width (335/$rem)
        height (146/$rem)
        margin-bottom (102/$rem)
        .login
          basic(white)
          background-color #b4282d
          border 1px solid #b4282d
          vertical-align middle
          .login_icon
            display inline-block
            margin-right (4/$rem)
            vertical-align middle
            line-height (45/$rem)
            &.iconfont
              font-size (20/$rem)
        .register
          basic(#b4282d )
          background-color #F2F5F4
          border 1px solid #b4282d
          vertical-align middle
          .register_icon
            display inline-block
            margin-right (4/$rem)
            vertical-align middle
            &.iconfont
              font-size (20/$rem)
        .fastRegister
          font-size (14/$rem)
          text-align center
          color #333
          vertical-align middle
          .fastRegister_icon
            display inline-block
            width (14/$rem)
            height (14/$rem)
            background url("./images/go.png")
            background-size 100%
            vertical-align middle
      .otherLogin
        position absolute
        bottom (40/$rem)
        width 100%
        clearFix()
        p
          font-size (14/$rem)
          text-align center
          width 33.333%
          float left
          color #7f7f7f
          vertical-align middle
          clearFix()
          .wx_icon
            basicPosition()
            &.iconfont
              font-size (20/$rem)
              vertical-align middle
          .qq_icon
            basicPosition()
            &.iconfont
              font-size (20/$rem)
              vertical-align middle
          .wb_icon
            basicPosition()
            &.iconfont
              font-size (20/$rem)
              vertical-align middle