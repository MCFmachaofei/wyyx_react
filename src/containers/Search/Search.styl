@import "../../assets/stylus/mixins.styl"
$rem = 750/10rem
.search
  width 100%
  background #f4f4f4
  .search_head
    width 100%
    height (88/$rem)
    box-sizing border-box
    padding 0 (30/$rem)
    background-color white
    display flex
    justify-content space-between
    bottom-border-1px(gray)
    clearFix()
    .inpt
      display flex
      width 80%
      height (56/$rem)
      background-color #f4f4f4
      align-items center
      padding 0 (20/$rem)
      border-radius (8/$rem)
      margin auto 0
      .icon
        display inline-block
        width (28/$rem)
        height (28/$rem)
        background url("http://yanxuan-static.nosdn.127.net/hxm/yanxuan-wap/p/20161201/style/img/icon-normal/search2-2fb94833aa.png") no-repeat
        margin-right (16/$rem)
      .icon2
        display inline-block
        width (50/$rem)
        height (50/$rem)
        background url("http://yanxuan-static.nosdn.127.net/hxm/yanxuan-wap/p/20161201/style/img/icon-normal/clearIpt-f71b83e3c2.png") no-repeat
      input
        font-size (28/$rem)
        width 100%
        background-color #f4f4f4
        outline none
        -webkit-appearance button
        &::-webkit-input-placeholder
          color #999999

    .cancal
      float right
      margin-left  (30/$rem)
      text-align center
      font-size (28/$rem)
      line-height (88/$rem)

  .search_container
    background-color white
    padding 0 (30/$rem) (30/$rem)
    p
      height (90/$rem)
      font-size (28/$rem)
      line-height (90/$rem)
      color #999
    .navList
      font-size (24/$rem)
      a
        color #b4282d
        border 1px solid #b4282d
        border-radius (8/$rem)
        line-height (45/$rem)
        display inline-block
        height (45/$rem)
        padding 0 (15/$rem)
        margin-right (32/$rem)
        margin-bottom (32/$rem)
        &.on
          border 1px solid #999999
          color #333
    .contentList
      padding 0 (30/$rem)
      width 100%
      font-size (28/$rem)
      line-height 1.2rem
      box-sizing border-box
      &>li
        width 100%
        height (90/$rem)
        bottom-border-1px(gray)