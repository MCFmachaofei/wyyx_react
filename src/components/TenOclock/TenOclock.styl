@import "../../assets/stylus/mixins.styl"
$rem = 750/10rem
.tenOclock
  box-sizing border-box
  background white
  width 100%
  padding 0 (30/$rem) (40/$rem)
  margin-bottom (20/$rem)
  .tenOclock_head
    width 100%
    height (120/$rem)
    background white
    font-size (32/$rem)
    line-height (120/$rem)
    text-align center
  .recommend_container
    width 100%
    clearFix()
    .container
      float left
      display flex
      .container_items
        float left
        width (500/$rem)
        height (294/$rem)
        margin-right (30/$rem)
        text-align center
        padding (38/$rem) (40/$rem) (79/$rem)
        color #333
        position relative
        background url("http://yanxuan-static.nosdn.127.net/hxm/yanxuan-wap/p/20161201/style/img/icon-normal/tenFifteen-2a1d0ea11b.png") no-repeat
        &.last
          box-sizing border-box
          height (384/$rem)
          border 10px solid #e6e6e6
          background none
          p
            font-size (32/$rem)
            text-align center
            line-height (268/$rem)
            color #7f7f7f
            margin-right (17/$rem)
            .icon
              display inline-block
              background url("http://yanxuan-static.nosdn.127.net/hxm/yanxuan-wap/p/20161201/style/img/icon-normal/circle-right-arrow-3d59025cb6.png") no-repeat
              width (30/$rem)
              height  (30/$rem)
              vertical-align middle
        .inner_title
          font-size (24/$rem)
          color #7f7f7f
          margin-bottom (40/$rem)
        .container_title
          .mainTitile
            font-size (36/$rem)
            font-weight 700
            padding-bottom (14/$rem)
          .subTitle
            font-size (28/$rem)
            line-height 1.5
            color #333

        .container_bottom
          position absolute
          bottom (78/$rem)
          clearFix()
          .imgs
            float left
            margin-right (16/$rem)
            .container_bottom_icon
              display inline-block
              width (46/$rem)
              height (46/$rem)
              border-radius 50%
              border 1px solid #ffffff
              &.last
                vertical-align middle
          .container_bottom_text
            font-size (24/$rem)
            text-align left
            line-height (48/$rem)
            vertical-align middle
            color #7f7f7f