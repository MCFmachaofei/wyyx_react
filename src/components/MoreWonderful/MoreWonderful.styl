@import "../../assets/stylus/mixins.styl"
$rem = 750/10rem
.MoreWonderful
  margin  0 (30/$rem) (30/$rem)
  .MoreWonderful_head
    color #333
    width 100%
    height (140/$rem)
    font-size (28/$rem)
    line-height (140/$rem)
    text-align center
    position relative
    z-index 50
    &::before
      content ''
      position absolute
      top 50%
      z-index 100
      left 0
      width 100%
      height 1px
      background-color black
      transform scaleY(0.5)
  .otherThings
    padding (24/$rem)
    margin-bottom (30/$rem)
    background-color #fff
    color #333
    .otherthing_image
      width 100%
      height 100%
      &.other
        box-sizing border-box
        clearFix()
        .firstImage
          width (68%)
          height (360/$rem)
          float left
        .otherImage
          width (30%)
          float right
          img
            width 100%
    .otherthing_title
      padding (28/$rem) 0
      line-height 1.2
      background-color #fff
      font-size (28/$rem)
