@import "../../assets/stylus/mixins.styl"
$rem = 750/10rem
section.timeLimit_welfare
  width 100%
  .timeLimit
    width 100%
    background-color white
    box-sizing border-box
    padding (30/$rem) (40/$rem) (30/$rem) (56/$rem)
    margin-bottom (20/$rem)
    display flex
    .timeLimit_left
      display flex
      flex 1
      flex-direction column
      padding-top (40/$rem)
      line-height (32/$rem)
      .timeLimit_left_title
        display inline-block
        font-size (36/$rem)
        line-height (36/$rem)
        margin-bottom (24/$rem)
        color #333333
        letter-spacing (12/$rem)
      .timeLimit_left_time
        &>span:nth-child(1),&>span:nth-child(3),&>span:nth-child(5)
          display inline-block
          line-height (56/$rem)
          text-align center
          width (75/$rem)
          height (56/$rem)
          font-size (32/$rem)
          color #fff
          border-radius (4/$rem)
          background-color #444
        &>span:nth-child(2),&>span:nth-child(4)
          color #333333
          font-size (30/$rem)
          width (20/$rem)
          display inline-block
          text-align center
      .timeLimit_left_next
        margin-top (40/$rem)
        font-size (24/$rem)
        color #333333
        height ()
    .timeLimit_right
      width (320/$rem)
      height (320/$rem)
      position relative
      .timeLimit_right_img
        display inline
        width 100%
        height 100%
      .timeLimit_right_price
        width (96/$rem)
        height (96/$rem)
        position absolute
        bottom (50/$rem)
        right 0
        border-radius 50%
        background-color rgba(244,143,24,.95)
        display flex
        align-items center
      .timeLimit_right_price_text
        color white
        font-size (24/$rem)
        text-align center
  .welfare
    margin-bottom (12/$rem)
    .welfare_image
      width 100%
      height 100%