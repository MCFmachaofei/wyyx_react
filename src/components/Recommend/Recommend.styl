@import "../../assets/stylus/mixins.styl"
$rem = 750/10rem
.recommend
  box-sizing border-box
  background white
  width 100%
  padding 0 (30/$rem) (40/$rem)
  margin-bottom (20/$rem)
  .recommend_head
    width 100%
    height (120/$rem)
    background white
    font-size (32/$rem)
    line-height (120/$rem)
    text-align center
  .recommend_container
    margin-bottom (30/$rem)
    border 1px solid #d9d9d9
    position relative
    border-radius (8/$rem)
    .recommend_content
      height (386/$rem)
      border-radius (8/$rem)
      .recommend_content_image
        width 100%
        height 100%
      .recommend_content_titile
        font-size (24/$rem)
        display inline-block
        position absolute
        top (20/$rem)
        left (20/$rem)
        height (34/$rem)
        line-height (34/$rem)
        color #333
        padding 0 (16/$rem)
        border 1px solid #d9d9d9
        background-color rgba(255,255,255,.9)
        border-radius (20/$rem)
    .recommend_describe
      box-sizing border-box
      width (100%)
      background-color white
      padding (24/$rem) (20/$rem) (67/$rem)
      bottom-border-1px(#f6f6f6)
      .recommend_describe_text
        clearFix()
        .recommend_describe_title
          float left
          font-size (34/$rem)
          margin-right (30/$rem)
          color black
        .recommend_describe_price
          float right
          font-size (34/$rem)
          color black
      .recommend_describe_text
        padding-top (10/$rem)
        display block
        font-size (28/$rem)
        color #7f7f7f
        line-height (1.2)
  .recommend_container_Subs
    box-sizing border-box
    width 100%
    border 1px solid #d9d9d9
    position relative
    background-color #fff
    color #333
    border-radius (8/$rem)
    margin-bottom (30/$rem)
    display flex
    .container_Subs_left
      flex 1
      display flex
      flex-direction column
      justify-content center
      padding-left (20/$rem)
      padding-right (30/$rem)
      width 50%
      .container_Subs_left_top
        margin-bottom (25/$rem)
        display flex
        align-items center
        &>img
          width (46/$rem)
          height (46/$rem)
          margin-right (8/$rem)
          border-radius 50%
          border 1px solid #d9d9d9
          vertical-align middle
        &>span
          font-size (20/$rem)
          color #333
          vertical-align middle
      .container_Subs_left_Bottom
        font-size (24/$rem)
        display flex
        flex-direction column
        justify-content space-between
        .title
          margin-bottom (14/$rem)
          font-size (32/$rem)
    .container_Subs_right
      width (278/$rem)
      height (272/$rem)
      position relative
      &>img
        width (278/$rem)
        height (272/$rem)
      .describe
        position absolute
        font-size (24/$rem)
        top (10/$rem)
        left  (10/$rem)
        background-color rgba(255,255,255,.9)
        height (34/$rem)
        padding 0 (16/$rem)
        border 1px solid #d9d9d9
        border-radius (20/$rem)
        line-height (34/$rem)